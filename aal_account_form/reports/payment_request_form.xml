<odoo>
    <template id="aal_payment_request_form">
        <div class="header">
            <div class="row">
                <div class="col-5">
                    <div>
                        <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" alt="Logo" style="max-height: 75px;"/>
                    </div>
                    <table class="mt16">
                        <tr>
                            <td colspan="2">
                                <span t-field="o.company_id.street"/><br/>
                                <span t-field="o.company_id.street2"/>
                                <span t-field="o.company_id.city"/>
                                <span t-field="o.company_id.state_id.name"/>
                                <span t-field="o.company_id.country_id.name"/>
                                <span t-field="o.company_id.zip"/>
                            </td>
                        </tr>
                        <tr>
                            <td>T. <span t-field="o.company_id.phone"/></td>
                            <td>F. +662 249 4283</td>
                        </tr>
                        <tr>
                            <td colspan="2">TAX ID NO.: <span t-field="o.company_id.vat"/> / Branch: Head Office</td>
                        </tr>
                    </table>
                </div>
                <div class="col-7">
                    <h4 class="text-right">
                        PAYMENT REQUEST
                    </h4>
                    <div class="row mt32">
                        <div class="col-6 text-right">
                            <p>Document No. :</p>
                        </div>
                        <div class="col-6">
                            <span t-field="o.name"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 text-right">
                            <p>
                                Date :<br/>
                                Page :
                            </p>
                        </div>
                        <div class="col-6">
                            <span t-field="o.date"/><br/>
                            <span class="page"/> / <span class="topage"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="article payment_request_form">
            <div class="table_company">
                <table class="table table-sm table-borderless table_company_data mt4">
                    <thead>
                        <tr class="text-center">
                            <th>PAYMENT DETAILS</th>
                        </tr>
                    </thead>
                </table>
                <div class="row">
                    <div class="col-2">
                        Paid to:
                    </div>
                    <div class="col-10">
                        <span t-field="o.partner_id.name"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        By:
                    </div>
                    <div class="col-10">
                        <span t-field="o.partner_id.bank_ids.bank_id"/>
                        <span t-field="o.partner_id.bank_ids.acc_number"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        Payment Method:
                    </div>
                    <div class="col-10">
                        <span t-field="o.payment_method"/>
                    </div>
                </div>
            </div>

            <table class="table table-sm table-borderless table_data mt16">
                <thead>
                    <tr class="text-center" valign="text-middle">
                        <th>NO.</th>
                        <th>INVOICE NO.</th>
                        <th>INVOICE DATE</th>
                        <th>DUE DATE</th>
                        <th>AMOUNT</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="n" t-value="1"/>
                    <t t-foreach="o.invoice_ids" t-as="line">
                        <tr class="text-center">
                            <td>
                                <span t-esc="n"/>
                                <t t-set="n" t-value="n+1"/>
                            </td>
                            <td>
                                <span t-field="line.number"/>
                            </td>
                            <td>
                                <span t-field="line.date_invoice"/>
                            </td>
                            <td>
                                <span t-field="line.date_due"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="'{0:,.2f}'.format(line.amount_total)"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>

            <div class="clearfix">
                <div class="row">
                    <div class="col-6">
                    </div>
                    <div class="col-6">
                        <table class="table table-sm table-borderless">
                            <tr>
                                <td class="text-right">
                                    <strong>Subtotal</strong>
                                </td>
                                <td class="text-right">
                                    <span t-esc="'{0:,.2f}'.format(o.subtotal)"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right">
                                    <strong><span t-field="o.amount_diff_name"/></strong>
                                </td>
                                <td class="text-right horizontal_line">
                                    <span t-esc="'{0:,.2f}'.format(o.amount_diff)"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right">
                                    <strong>Grand Total</strong>
                                </td>
                                <td class="text-right horizontal_double_line">
                                    <span t-esc="'{0:,.2f}'.format(o.amount_total)"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row mt32">
                    <div class="col-8">
                        <table class="table table-sm table_note">
                            <thead>
                                <th>Notes</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><span t-field="o.narration"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="footer table">
            <div class="row mb32">
                <div class="col-4">
                    <table class="table table-sm table_signature">
                        <thead>
                            <th>Prepare by:</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td><br/><br/>Date :</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-4">
                    <table class="table table-sm table_signature">
                        <thead>
                            <th>Checked by:</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td><br/><br/>Date :</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-4">
                    <table class="table table-sm table_signature">
                        <thead>
                            <th>Approved By:</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td><br/><br/>Date :</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </template>

    <template id="aal_payment_request_form_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="aal_account_form.aal_payment_request_form"/>
            </t>
        </t>
    </template>
</odoo>
